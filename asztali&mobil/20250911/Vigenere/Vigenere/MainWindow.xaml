<Window x:Class="Vigenere.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vigenere"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        MinWidth="720" MinHeight="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Nyílt szöveg:" FontSize="20" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="10" FontSize="20" TextWrapping="Wrap" x:Name="NyiltSzovegTextBox"/>
        <TextBlock Grid.Row="0" Grid.Column="3" FontSize="20" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" x:Name="NyiltSzovegFormattedTextBlock"/>

        <Label Content="Kulcsszó: (max 5 karakter)" FontSize="20" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="50" FontSize="20" x:Name="KulcsszoTextBox"/>
        <TextBlock Grid.Row="1" Grid.Column="3" FontSize="20" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" x:Name="KulcsszoFormattedTextBlock"/>

        <Button Content="Kódolás" Grid.Row="2" Grid.Column="0" FontSize="20" Margin="10" x:Name="KodolasBtn" Click="KodolasBtn_Click"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" FontSize="20" Text="" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" x:Name="KodoltSzovegTextBlock"/>

    </Grid>
</Window>
